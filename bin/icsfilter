#!/usr/bin/env ruby
# encoding: utf-8

require_relative '../lib/trollop'
require_relative '../lib/icsfilter'

opts = Trollop::options do
  # opt :out, "File to save the filtered calendar to. Required if the calendar given is a URL", short: 'o'
end

filters = Regexp.union(/\AKSA \/ fri\z/, /\AKSA \/ Lukket\z/)
targets = Regexp.union(/\AKSA \/ /, /\AStudy Activity\,  : /)

icsfilter = IcsFilter.new(ARGV[0], ARGV[1])
icsfilter.filter(filters).replace(targets).publish
